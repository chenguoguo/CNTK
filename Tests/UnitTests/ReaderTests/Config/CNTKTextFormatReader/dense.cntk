# deviceId = -1 for CPU, >= 0 for GPU devices
deviceId = -1

1x1 = [
    precision = "double"
    reader = [
        readerType = "CNTKTextFormatReader"
        # Training file contains a single frame
        # (a sequence with a single sample) 
        file = "1x1_dense.txt"

        randomize = "auto"

        input = [
             features = [
                alias = "F"
                dim = 10000
                format = "dense"
            ]
        ]
    ]
]

