      <PrecompiledHeader>NotUsing</PrecompiledHeader>
    </ClCompile>
    <ClCompile Include="..\..\Common\Config.cpp">
      <PrecompiledHeader Condition="$(DebugBuild)">NotUsing</PrecompiledHeader>
